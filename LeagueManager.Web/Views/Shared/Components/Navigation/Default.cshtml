@model List<NavTournamentModel>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">LeagueManager</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
                        Tournaments
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var tournament in Model)
                        {
                            <li>
                                <a asp-controller="Tournament" asp-action="Tournament" asp-route-id="@tournament.Id">@tournament.Name</a>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
</nav>
